
@model IEnumerable<CarmaCustomerService.ConsumerLogInInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="search-results">
    <h3>Search results (found @Model.Count() records)</h3>

    <table id="table-consumers">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Email/UserID</th>
                <th>Address1</th>
                <th>Home Phone</th>
                <th>Display Name</th>
                <th>Date Created</th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td colspan="4">Search results based from CARMA Consumer database. Contact IT for help</td>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ConsumerTouchPointProfile.NameLast)</td>
                    <td>@Html.DisplayFor(modelItem => item.ConsumerTouchPointProfile.NameFirst)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                    <td>@Html.DisplayFor(modelItem => item.ConsumerTouchPointProfile.ConsumerDemographic.Street)</td>
                    <td>@Html.DisplayFor(modelItem => item.ConsumerTouchPointProfile.ConsumerDemographic.PhoneHome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ConsumerTouchPointProfile.DateCreated)</td>
                    <td>View | Reset Password
                        @*@Html.ActionLink("View", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Reset Password", "Details", new { id=item.Id }) *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @{
        if (!Model.Any())
        {
            @:No Results
        }
    }
</div>
